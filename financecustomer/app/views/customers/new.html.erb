<h1>New Customer</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
        <p><%= error  %></p>
    <% end %>
<% end %>

<%= form_for @customer do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.submit %>
<% end %>