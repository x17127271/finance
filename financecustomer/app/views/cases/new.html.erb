<h1>New Case</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
        <p><%= error  %></p>
    <% end %>
<% end %>

<%= form_for @case do |f| %>
    <%= f.label :customer_id %>
    <%= f.collection_select :customer_id, Customer.all, :id, :name %>
    <%= f.label :topic %>
    <%= f.text_field :topic %>
    <%= f.label :comments %>
    <%= f.text_field :comments %>

    <%= f.submit%>
<% end %>
